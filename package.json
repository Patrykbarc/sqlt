{
  "name": "sqlter",
  "version": "1.2.1",
  "author": "Patryk BarÄ‡",
  "description": "A lightweight SQL template tag utility for JavaScript that safely handles SQL string interpolation and parameter binding",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "build": "pnpm tsc",
    "prepare": "husky install",
    "publish": "pnpm run build && pnpm publish"
  },
  "keywords": [
    "sql",
    "template",
    "tag",
    "string",
    "interpolation",
    "query",
    "builder",
    "prepared",
    "statements",
    "parameter",
    "binding"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Patrykbarc/sqlt.git"
  },
  "bugs": {
    "url": "https://github.com/Patrykbarc/sqlt/issues"
  },
  "homepage": "https://github.com/Patrykbarc/sqlt#readme",
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/jest": "^29.5.14",
    "eslint": "^8.57.1",
    "globals": "^16.0.0",
    "husky": "^9.0.11",
    "jest": "^29.0.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
